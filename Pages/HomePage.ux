<Page ux:Class="HomePage">
  <Router ux:Dependency="router" />
    <JavaScript File="HomePage.js" />

    <DockPanel>
      <zmart.Text FontSize="60" TextAlignment="Center" Dock="Top" Margin="0,50"> Din Uke</zmart.Text>
        <ScrollView>
            <StackPanel>
            <Rectangle ux:Class="Separator" Height="1" Fill="#fff4" />

              <Each Items="{sleepLogs}">
                <Separator />

                <Panel HitTestMode="LocalBoundsAndChildren" Clicked="{goToLog}">
                  <Text Color="White" Value="{dag}" Margin="20"/>
                  <WhilePressed>
                  <Scale Factor=".95" Duration=".08" Easing="QuadraticOut" />
                  </WhilePressed>
                </Panel>
              </Each>
              <Separator/>
              <Text Color="White" FontSize="20"> Sovet Totalt denne uken </Text>
              <Text Color="White" Margin="20" FontSize="30" Value="{totalTime}"/>
            </StackPanel>
        </ScrollView>
    </DockPanel>
</Page>
